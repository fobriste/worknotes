for i in `cat domains` ; do DOMBASE=`echo $i | sed 's/.com//'` ; DOMDIR="/var/plat-www/$DOMBASE/public" ; DOMCONF="/etc/httpd/conf/platform/$DOMBASE.conf" ; mkdir -p $DOMDIR ; echo '<VirtualHost *:80>' > $DOMCONF ; echo "ServerName www.$i" >> $DOMCONF; echo "ServerAlias $i" >> $DOMCONF ; echo "DocumentRoot /var/plat-www/$DOMBASE/public" >> $DOMCONF ; echo "DirectoryIndex index.php indexehtml" >> $DOMCONF ; echo "<Directory $DOMDIR>" >> $DOMCONF ; echo "AllowOverride All" >> $DOMCONF ; echo "</Directory>" >> $DOMCONF ; echo "</VirtualHost>" >> $DOMCONF ; done
